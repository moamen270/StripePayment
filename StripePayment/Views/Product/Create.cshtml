@model Product


<form method="post" asp-action="Create" >
	<input asp-for="Id" hidden value="0" />
	<div class=" my-4 row col-12">
		<div class="col-10  ">
			<h2 class="text-primary">Create Product</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="row  col-12">
			<div class="col-6">
				<div class="mb-3 col-12">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="mb-3 col-12">
					<label asp-for="Description"></label>
					<textarea asp-for="Description" rows="3" class="form-control"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="mb-3 col-12">
					<label asp-for="Price"></label>
					<input asp-for="Price" class="form-control" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>


				<div class="mb-3 col-12">
					<label class="custom-file-label" asp-for="ImageUrl"></label>
					<input type="url" asp-for="ImageUrl" class="form-control"/>
					<span asp-validation-for="ImageUrl" class="text-danger"></span>
				</div>

			</div>
			

			<div class="m-1">

				<button type="submit" class="btn btn-primary" style="width:150px">Create</button>

				<a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
					Back
				</a>
			</div>


		</div>
	</div>


</form>