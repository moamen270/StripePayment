@using StripePayment.Models.Dtos;
@model RegisterDto

<section class=" bg-dark">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                                 alt="Sample photo" class="img-fluid"
                                 style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-6">
                            <div class="card-body p-md-5 text-black">
                                <h3 class="mb-5 text-uppercase">Registration form</h3>
                                <form asp-action="Register" method="post">
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="FirstName">First name</label>
                                            <input type="text" id="form3Example1m" asp-for="FirstName" class="form-control form-control-lg" />
    
                                            
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="LastName">Last name</label>
                                            <input type="text" asp-for="LastName" id="form3Example1n" class="form-control form-control-lg" />

                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="PhoneNumber">PhoneNumber</label>
                                            <input asp-for="PhoneNumber" id="form3Example1m1" class="form-control form-control-lg" />

                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <label class="form-label" asp-for="City">City</label>
                                            <input type="text" id="form3Example1n1" asp-for="City" class="form-control form-control-lg" />

                                        </div>
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                        <label class="form-label" asp-for="Country">Country</label>
                                        <input type="text" asp-for="Country" id="form3Example8" class="form-control form-control-lg" />

                                </div>
                                <div class="form-outline mb-4">
                                <label class="form-label" asp-for="Email">Email Address</label>
                                <input type="text" id="form3Example9" asp-for="Email" class="form-control form-control-lg" />

                                </div>

                                <div class="form-outline mb-4">
                                <label class="form-label" asp-for="Password">Password</label>
                                        <input type="password" id="form3Example90" asp-for="Password" class="form-control form-control-lg" />
   
                                </div>
                                <div class="d-flex justify-content-end pt-3">
                                    <button asp-controller="Home" asp-action="Index" type="button" class="btn btn-light btn-lg">Go back</button>
                                    <button type="submit" class="btn btn-warning btn-lg ms-2">Register</button>
                                </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>